{
  "name": "minecraft-stats",
  "version": "0.1.0",
  "description": "Just messing around with doing things with the stats you get in a Minecraft world",
  "main": "build/electron/main.js",
  "repository": "https://github.com/verygooddev/minecraft-stats",
  "author": "VeryGoodDev <very_good_dev@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "node ./scripts/build.js",
    "build:prod": "node ./scripts/build.js --prod",
    "dev": "node ./scripts/dev.js",
    "lint": "eslint **/*.js",
    "start:electron": "electron ."
  },
  "dependencies": {
    "@emotion/css": "^11.1.3",
    "@react-types/overlays": "^3.4.0",
    "@react-types/select": "^3.2.0",
    "@react-types/shared": "^3.5.0",
    "conf": "^9.0.2",
    "electron-reload": "^1.5.0",
    "phosphor-react": "^1.2.1",
    "preact": "^10.5.13",
    "preact-render-to-string": "^5.1.16",
    "preact-router": "^3.2.1",
    "react-aria": "^3.5.0",
    "react-helmet": "^6.1.0",
    "react-stately": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@types/react-helmet": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "electron": "^12.0.2",
    "esbuild": "^0.10.2",
    "esbuild-plugin-alias": "^0.1.2",
    "eslint": "^7",
    "eslint-config-personal": "github:verygooddev/eslint-config-personal",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "personal"
    ],
    "settings": {
      "react": {
        "pragma": "h",
        "fragment": "Fragment"
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "src/**/*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "personal"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "rules": {
          "no-undef": "off",
          "no-use-before-define": "off",
          "no-unused-vars": "off",
          "import/extensions": "off",
          "import/no-extraneous-dependencies": "off",
          "import/no-unresolved": "off",
          "jsx-a11y/no-onchange": "off",
          "react/button-has-type": "off",
          "react/react-in-jsx-scope": "off",
          "react/no-unknown-property": "off",
          "@typescript-eslint/no-use-before-define": [
            "error",
            {
              "typedefs": false,
              "functions": false
            }
          ]
        }
      },
      {
        "files": [
          "src/**/*.tsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off"
        }
      }
    ],
    "ignorePatterns": "**/*.d.ts"
  },
  "alias": {
    "react": "preact/compat",
    "react-dom/test-utils": "preact/test-utils",
    "react-dom": "preact/compat"
  }
}
