{
  "name": "minecraft-stats",
  "version": "0.1.0",
  "description": "Just messing around with doing things with the stats you get in a Minecraft world",
  "main": "main.js",
  "repository": "https://github.com/verygooddev/minecraft-stats",
  "author": "VeryGoodDev <very_good_dev@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "node ./scripts/build.js",
    "build:prod": "node ./scripts/build.js --prod",
    "lint": "eslint **/*.js",
    "start": "yarn build && electron ."
  },
  "dependencies": {
    "conf": "^9.0.2",
    "preact": "^10.5.13",
    "preact-render-to-string": "^5.1.16",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "electron": "^12.0.2",
    "esbuild": "^0.10.2",
    "eslint": "^7",
    "eslint-config-personal": "github:verygooddev/eslint-config-personal",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "personal"
    ],
    "settings": {
      "react": {
        "pragma": "h",
        "fragment": "Fragment"
      }
    },
    "overrides": [
      {
        "files": [
          "**/*.ts",
          "src/**/*.tsx"
        ],
        "extends": [
          "plugin:@typescript-eslint/eslint-recommended",
          "plugin:@typescript-eslint/recommended",
          "personal"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
          "@typescript-eslint"
        ],
        "rules": {
          "no-undef": "off",
          "import/extensions": "off",
          "import/no-extraneous-dependencies": "off",
          "import/no-unresolved": "off",
          "react/react-in-jsx-scope": "off"
        }
      },
      {
        "files": [
          "src/**/*.tsx"
        ],
        "rules": {
          "@typescript-eslint/explicit-module-boundary-types": "off"
        }
      }
    ],
    "ignorePatterns": "**/*.d.ts"
  }
}
