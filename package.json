{
  "name": "minecraft-stats",
  "version": "0.1.0",
  "description": "Just messing around with doing things with the stats you get in a Minecraft world",
  "main": "main.js",
  "repository": "https://github.com/verygooddev/minecraft-stats",
  "author": "VeryGoodDev <very_good_dev@outlook.com>",
  "license": "MIT",
  "scripts": {
    "build": "concurrently \"npm:build:app\" \"npm:build:electron\"",
    "build:app": "node ./scripts/build.js",
    "build:app:prod": "node ./scripts/build.js --prod",
    "build:electron": "tsc",
    "build:prod": "concurrently \"npm:build:app:prod\" \"npm:build:electron\"",
    "lint": "eslint **/*.js",
    "start": "yarn build && electron ."
  },
  "dependencies": {
    "conf": "^9.0.2",
    "preact": "^10.5.13",
    "preact-render-to-string": "^5.1.16",
    "preact-router": "^3.2.1"
  },
  "devDependencies": {
    "@types/node": "^14.14.37",
    "concurrently": "^6.0.0",
    "electron": "^12.0.2",
    "esbuild": "^0.10.2",
    "eslint": "^7",
    "eslint-config-personal": "github:verygooddev/eslint-config-personal",
    "typescript": "^4.2.3"
  },
  "eslintConfig": {
    "extends": [
      "personal"
    ],
    "settings": {
      "react": {
        "pragma": "h",
        "fragment": "Fragment"
      }
    }
  }
}
