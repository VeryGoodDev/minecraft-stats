{
  "compilerOptions": {
    // Basic Options
    "module": "commonjs",
    "newLine": "lf",
    "outDir": "build",
    "rootDir": ".",
    "target": "ESNext",

    // Strict Type-Checking Options
    "esModuleInterop": true,
    "strict": true,

    // Advanced Options
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "importsNotUsedAsValues": "preserve",

    // JSX Options
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
  },
  "include": [
    "./electron/**/*.ts"
  ]
}
